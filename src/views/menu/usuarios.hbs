<div class="container p-4">
    <div class="row">
        <table class="default">
            <caption>Usuarios de interAppctua</caption>
            <tr><th>Nombre</th>
            <th class="field-big">Correo</th>
            <th>Nombre twitter</th><th class="field-big">Descripción</th><th>Puntos Ponencia</th><th>Puntos Preguntas</th><th>Rol</th><th></th></tr>
        {{#each usuarios}}
            <tr><td>{{DS_NOMBRE}}</td>
                <td class="field-big">{{DS_CORREO}}</td>
            <td>{{DS_TWITTER}}</td><td class="field-big">{{DS_DESCRIPCION}}</td><td>{{NM_PUNTOS}}</td><td>{{NM_PUNTOS_CUESTION}}</td>
            {{#if ES_ADMIN }}
                <td>Administrador</td>
                <td><a class="btn btn-danger btn-block" href="usuarios/quitarRol/{{CD_USUARIO}}">
                    Quitarle Admin
                </a></td>
            {{else}}
                <td>Usuario</td>
                <td><a class="btn btn-success btn-block" href="usuarios/otorgarRol/{{CD_USUARIO}}">
                    Otorgarle Admin
                </a></td>
            {{/if}}
            </tr>
        {{/each}}
        </table>
    </div>
</div>

<div class="container p-4">
    <div class="row">
        <a class="btn btn-secondary" href="usuarios/actualizar">
            Actualizar
        </a>
    </div>
</div>

