  
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                   <form action="/actualizarPerfil" method="POST">
                    <div class="form-group">
                        Correo: <input type="text" name="username" placeholder="{{user.DS_CORREO}}" class="form-control">
                    </div>
                    <div class="form-group">
                        Nombre de usuario: <input type="text" name="name" placeholder="{{user.DS_NOMBRE}}" class="form-control">
                    </div>
                    <div class="form-group">
                        Usuario de twitter: <input type="text" name="name" placeholder="{{user.DS_TWITTER}}" class="form-control">
                    </div>
                    <div class="form-group">
                        Descripción: <textarea type="text" name="name" rows="4" cols="50" placeholder="{{user.DS_DESCRIPCION}}" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        Contraseña: <input type="password" name="pass" placeholder="{{user.DS_PASS}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Guardar cambios</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

  
